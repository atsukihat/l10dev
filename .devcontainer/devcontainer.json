{
  "name": "l10dev",
  "dockerComposeFile": ["../docker-compose.yml"],
  "service": "l10dev-app",
  "workspaceFolder": "/src",
  "shutdownAction": "stopCompose",

  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "xdebug.php-debug",
        "junstyle.php-cs-fixer",
        "bmewburn.vscode-intelephense-client",
        "one-dark.ayu",
        "dbaeumer.vscode-eslint",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "intelephense.environment.phpVersion": "8.1",
        "php.validate.executablePath": "/usr/local/bin/php",
        "eslint.validate": ["javascript", "vue"],
        "volar.takeOverMode.enabled": true
      }
    }
  },

  "postCreateCommand": "composer install && composer require spatie/laravel-permission && php artisan key:generate && npm install && npm install --save-dev vue @vitejs/plugin-vue && php artisan migrate:fresh --seed && npm run dev",

  "postStartCommand": "composer install && php artisan migrate && npm install && npm run dev",

  "forwardPorts": [5173, 9001, 3306, 16379]
}
